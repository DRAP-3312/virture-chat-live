{
  "name": "virture-chat-live",
  "private": false,
  "version": "1.0.2",
  "type": "module",
  "main": "./dist/virture-chat-live.umd.js",
  "module": "./dist/virture-chat-live.es.js",
  "types": "./dist/index.d.ts",
  "author": {
    "name": "drap",
    "email": "davidake117@gmail.com"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/virture-chat-live.es.js",
      "require": "./dist/virture-chat-live.umd.js"
    },
    "./widget": {
      "import": "./dist/widget-entry.es.js",
      "require": "./dist/widget-entry.umd.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "build:lib": "vue-tsc -b && vite build --mode production",
    "build:widget": "vite build --mode widget",
    "build:all": "npm run build:lib && npm run build:widget",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "dependencies": {
    "bad-words": "^4.0.0",
    "dompurify": "^3.3.1",
    "lucide-vue-next": "^0.563.0",
    "socket.io-client": "^4.8.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vue-tsc": "^3.1.4"
  }
}
